                        <li class="nav-item"><a class="nav-link" href="login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="survey">Survey</a></li>
                        <li class="nav-item"><a class="nav-link" href="database">Database</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Submission Form -->
        <!--Things that need to happen:
            - zoom out background photo   
        -->
        <header class="masthead">
            <div class="submission-form">
                <h2 class="formtext">Submit Information</h2>
                <br>
                <form action="/submitsurvey" method="POST">
                    <label class="formtext" for="DessertName">Dessert Name:</label>
                    <input type="text" id="DessertName" name="DessertName" maxlength="70" required>
                    <br>
                    <br>
                    <label class="formtext" for="RestName">Restaurant Name:</label>
                    <input type="text" id="RestName" name="RestName" maxlength="70" required>
                    <br>
                    <br>
                    <label class="formtext" for="StreetAddress">Street Address:</label>
                    <input type="text" id="StreetAddress" name="StreetAddress" maxlength="100" required>
                    <br>
                    <br>
                    <label class="formtext" for="FirstName">First Name:</label>
                    <input type="text" id="FirstName" name="FirstName" maxlength="30" required>
                    <br>
                    <br>
                    <label class="formtext" for="LastName">Last Name:</label>
                    <input type="text" id="LastName" name="LastName" maxlength="30" required>
                    <br>
                    <br>
                    <label class="formtext" for="Email">Email:</label>
                    <input type="text" id="Email" name="Email" maxlength="30" required>
                    <br>
                    <br>
                    <label class="formtext" for="Description">Description:</label>
                    <input type="text" id="Description" name="Description" maxlength="200" required>
                    <br>
                    <br>
                    <label class="formtext" for="Price">Price:</label>
                    <input type="number" step="0.01" id="Price" name="Price" required>
                    <br>
                    <br>
                    <div id="slider-container">
                        <!--CHANGE - get the label to be on the left, not over the 2-->
                        <label class="formtext" for="Stars">Stars: <span id="starsValue">3</span></label>
                        <br>
                        <input style="width: 90%;" type="range" id="Stars" name="Stars" min="1" max="5" value="3" oninput="updateStarsValue(this.value)" required>
                        <div class="static-numbers">
                            <span>1</span>
                            <span>2</span>
                            <span>3</span>
                            <span>4</span>
                            <span>5</span>
                        </div>
                        <br>
                    </div> 
                    <br>
                    <br>
                    <div class="checkbox-container">
                        <label for="GlutenFree">Gluten Free? (Y/N):</label>
                        <input type="checkbox" id="GlutenFree" name="GlutenFree">
                        <br><br>
                    </div>
                    <br>
                    <br>
                    <div class="checkbox-container">
                        <label for="DairyFree">Dairy Free? (Y/N):</label>
                        <input type="checkbox" id="DairyFree" name="DairyFree">
                        <br><br>
                    </div>
                    <br>
                    <br>
                    <br>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </header>
